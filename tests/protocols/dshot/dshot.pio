.program dshot
.side_set 1

.wrap_target
    set pindirs, 1      side 1
    set y, 16     side 1

    bitloop:
        jmp !y doread      side 1
        out x, 1     side 1 
        jmp !x dozero     side 0 [1]
    doone:
        nop     side 0
        jmp y-- bitloop     side 0
    dozero:
        nop     side 1 
        jmp y-- bitloop    side 1

    doread:
        set pindirs, 0      side 0 [15]

        set y, 31       side 0 [15]
        dodelay1:
            jmp y-- dodelay1     side 0 [15]

        set y, 31       side 0 [15]
        dodelay2:
            jmp y-- dodelay2     side 0 [15]

        set y, 31       side 0 [15]
        dodelay3:
            jmp y-- dodelay3     side 0 [15]

.wrap

% c-sdk {
    #include "hardware/clocks.h"

    void dshot_program_init(PIO pio, uint sm, uint offset, uint pins) {
        pio_gpio_init(pio, pins);
        gpio_set_pulls(pins, true, false);

        pio_sm_config c = dshot_program_get_default_config(offset);

        sm_config_set_sideset_pins(&c, pins); 
        sm_config_set_set_pins(&c, pins, 1);
        sm_config_set_out_shift(&c, false, true, 16);

        float div = clock_get_hz(clk_sys) / (1800000);
        sm_config_set_clkdiv(&c, div);

        pio_sm_init(pio, sm, offset, &c);
        pio_sm_set_enabled(pio, sm, true);
    }
%}